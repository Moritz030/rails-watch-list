
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path("banner.jpg") %>);">
  <div class="container">
    <h1>Moe's Watchlist</h1>
    <p>It's a watchlist</p>
  </div>
</div>
<div class="container mt-4">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="card col-12 col-sm-6 col-md-4 col-lg-3" style="width: 18rem;">
        <div class="card-body">
          <% if list.photo.attached? %>
            <%= cl_image_tag list.photo.key, crop: :fill, class: "card-img-top" %>
          <% else %>
            <%= image_tag "banner.jpg", crop: :fill, class: "card-img-top" %>
          <% end %>
          <h5 class="card-title"><%= link_to list.name, list_path(list)  %></h5>
      </div>
      </div> 
    <% end %>
  </div>
  <div class="text-center"><%= link_to "Create new List", new_list_path, class: "btn btn-primary mt-3" %></div>
</div>